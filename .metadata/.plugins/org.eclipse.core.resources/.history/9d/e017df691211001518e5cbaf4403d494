				if(getLorA() == 2){
					result = total - 1100;
					result2 = total -(int) (1100*1.5);
				}
				else{
					result = total +(int) (1100*1.5);
					result2 = total + 1100; 
				}
				TextHeightCal.setText(String.valueOf(Max(result2,result)));
